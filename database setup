sqlite3 hubstuff.db

BEGIN;
DROP TABLE IF EXISTS Devices;
DROP TABLE IF EXISTS Events;
CREATE TABLE Devices (
  devIdx INTEGER,
  userName TEXT,
  modelName TEXT,
  manufName TEXT,
  nwkId TEXT,
  eui64 TEXT,
  devType TEXT,
  endPoints TEXT,
  inClusters TEXT,
  outClusters TEXT,
  binding TEXT,
  reporting TEXT,
  iasZoneType TEXT,
);

CREATE TABLE Events (
  timestamp DATETIME,
  item TEXT,
  value TEXT,  
  devIdx INTEGER,
  FOREIGN KEY(devIdx) REFERENCES Devices(devIdx)
);
COMMIT;
.quit
# Next line needed to allow Python to write back to the database
chmod 666 hubstuff.db
# Next line needed to allow SQL from Apache to write back to the database
chmod 777 ..

